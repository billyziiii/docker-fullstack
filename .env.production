# 生產環境配置
NODE_ENV=production
PORT=10000

# 數據庫配置 (Render會自動提供)
DATABASE_URL=postgresql://[username]:[password]@[host]:[port]/[database]

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS 配置 (使用環境變數，Render會自動設定)
CORS_ORIGIN=${RENDER_EXTERNAL_URL}

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日誌配置
LOG_LEVEL=info

# 移除這行，讓前端使用相對路徑
# REACT_APP_API_URL=https://docker-fullstack-q84m.onrender.com
